{
  "compilerOptions": {
    "module": "Commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "paths": {
      "@prisma/client": ["src/modules/prisma/generated"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "prisma", "prisma.config.ts"]
}
